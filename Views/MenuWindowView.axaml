<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="600"
             x:Class="Test.Views.MenuWindowView">

	<StackPanel HorizontalAlignment="Center">
		<TextBlock FontSize="15" Margin="0,20,0,5" FontWeight="Bold" TextAlignment="Center"
				   Text="Pizza konfigurátor" />

		<StackPanel>
			<Button Width="160" Margin="0,10,0,5" Command="{Binding $parent[Window].DataContext.NovaObjednavka}"
					HorizontalContentAlignment="Center" Content="Vytvořit objednávku"/>
		</StackPanel>

		<StackPanel>
			<Button Width="160" Margin="0,10,0,5" Command="{Binding $parent[Window].DataContext.TvojeObjednavky}"
					HorizontalContentAlignment="Center" Content="Tvoje objednávky"/>
		</StackPanel>
	</StackPanel>

</UserControl>